@model IEnumerable<Web.Models.SearchInforDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
    <div class="form-group row">
        <div class="col-lg-10">
            Nhập tên học sinh: @Html.TextBox("studentName") --- Lớp: @Html.DropDownList("className", "Tất cả") --- Học lực: @Html.DropDownList("rating", new SelectList(new[] { "Chọn học lực", "Giỏi", "Khá", "Trung bình", "Yếu" }))
        </div>

    </div>

    <div class="form-group ">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
}

